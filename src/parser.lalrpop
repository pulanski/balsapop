pub(crate) PlusOrMinusSign: char = {
    <sign:Plus> => '+',
    <sign:Minus> => '-',
}

// "f32" | "f64"
pub(crate) FloatSuffix: String = {
    <float_suffix:r"f32|f64"> => float_suffix.to_string(),
}

