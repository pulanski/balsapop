}

// INNER_BLOCK_DOC :
//    /*! ( BlockCommentOrDoc | ~[*/] )* */
pub(crate) InnerBlockDocComment: String = {
    <comment:r"/\*!([^\*/])*\*/"> => String::from(comment),
