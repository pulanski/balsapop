}

// INNER_LINE_DOC :
//    //! ~[\n]*
pub(crate) InnerLineDocComment: Comment = {
    <comment:r"//![^\n]*"> => Comment::DocComment(DocComment::InnerLineDocComment {
        comment: String::from(comment),
